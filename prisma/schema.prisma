// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  name  String @unique
  email String @unique

  avatar   String?
  nickname String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  is_active Boolean  @default(true)

  history       UserHistory @relation(fields: [userHistoryId], references: [id])
  userHistoryId String      @unique

  @@map("users")
}

model UserHistory {
  id    String @id @default(uuid())
  
  wins  Int    @default(0)
  loses Int    @default(0)
  draws Int    @default(0)

  User User?

  @@map("users_history")
}
