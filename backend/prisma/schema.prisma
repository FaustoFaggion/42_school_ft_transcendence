generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  login    String  @unique
  email    String  @unique
  nickname String?

  avatar           String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  is_active Boolean  @default(true)

  history       UserHistory @relation(fields: [userHistoryId], references: [id])
  userHistoryId String      @unique

  // match_as_player_1   Match[]  @relation(name: "player_1")
  // match_as_player_2   Match[]  @relation(name: "player_2")
  
  // wins                Match[]  @relation(name: "winner")
  // loses               Match[]  @relation(name: "loser")

  @@map("users")
}

